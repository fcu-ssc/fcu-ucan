@model RegisterViewModel
@{
    ViewData["Title"] = "註冊";
}

<section class="section is-medium">
    <div class="container is-max-desktop">
        <div class="box content">
            <h1 class="title is-3">@ViewData["Title"]</h1>
            <hr />
            <form asp-area="" asp-controller="Account" asp-action="Register" asp-route-code="@Context.Request.RouteValues["code"]" method="post" role="form">
                <div class="field mb-5">
                    <label asp-for="UserName" class="label">帳號</label>
                    <div class="control has-icons-left">
                        <input asp-for="UserName" class="input" type="text" placeholder="請輸入帳號"/>
                        <span class="icon is-small is-left">
                            <i class="fas fa-user"></i>
                        </span>
                    </div>
                    <span asp-validation-for="UserName" class="help is-danger"></span>
                </div>
                <div class="field mb-5">
                    <label asp-for="Password" class="label">密碼</label>
                    <div class="control has-icons-left">
                        <input asp-for="Password" class="input" type="password" placeholder="請輸入密碼"/>
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="help is-danger"></span>
                </div>
                <div class="field mb-5">
                    <label asp-for="ConfirmPassword" class="label">確認密碼</label>
                    <div class="control has-icons-left">
                        <input asp-for="ConfirmPassword" class="input" type="password" placeholder="請輸入確認密碼"/>
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="help is-danger"></span>
                </div>
                <div class="field">
                    <div class="control">
                        <button class="button is-link" type="submit">註冊</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>